<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
        <include 
            layout="@layout/list_header"/>
        
        <TextView 
            android:id="@+id/tv_subject"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_10"
            android:textSize="@dimen/text_20"
            android:gravity="center"
            android:text="关于XXX的通知"
            android:textColor="@color/black"/>
        
        <TextView 
            android:id="@+id/tv_begin_date"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_13"
            android:gravity="center"
            android:text="时间：2015-5-6"
            android:textColor="@color/txt_deep_gray"/>
        
        <TextView 
            android:id="@+id/tv_type_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:textSize="@dimen/text_13"
            android:gravity="center"
            android:text="类型：公司公告"
            android:textColor="@color/txt_deep_gray"/>
        
        <TextView 
            android:id="@+id/tv_from_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:textSize="@dimen/text_13"
            android:gravity="center"
            android:text="发布人：管理员"
            android:textColor="@color/txt_deep_gray"/>
        
        <TextView 
            android:id="@+id/tv_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10"
            android:textSize="@dimen/text_17"
            android:text="公告来源公告来源公告来源公告来源公告来源公告来源公告来源公告来源公告来源公告来源公告来源"
            android:textColor="@color/black"/>
        
    </LinearLayout>

</ScrollView>